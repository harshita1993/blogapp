<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Post:</strong>
  <%= @article.post %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user_id %>
</p>

<h2> comments</h2>
<% @article.comment.each do |comment| %>

<p>
<strong>commenter:</strong>
<%= comment.commenter %>
</p>

<p>
<strong>comment:</strong>
<%= comment.body %>
</p>

<%end%>

<h2> add a comment: </h2>
<%=form_for([@article,@article.comment.build]) do |f| %>
<p>
<%=f.label :commenter %><br/>
<%= f.text_field :commenter %><br/>
</p>

<p>
<%=f.label :body %><br/>
<%= f.text_area :body %><br/>
</p>
<p>
 <%=f.submit %>
</p>
<%end%>








